@using System.Collections.Generic
@using System.Web.Mvc.Html
@using FormMethod = System.Web.Mvc.FormMethod
@{
    ViewBag.Title = "Add Cartão SIM";
}
@model PortalDSEMonitorizacao.Models.AddCartaoSIMListViewModel

@using (Html.BeginForm("AddAplicacao2", "Home", FormMethod.Post))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
        <p align="center">Adicionar Novo Cartão SIM</p>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.Label("lblNumero", "(*) Número:", new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBox("frmNumero", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("lblOperadora", "Operadora:", new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBox("frmOperadora", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("blbPass", "Data Registo:", new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    <div class='input-group date' id='datetimepicker1'>
                        @Html.TextBox("dataRegisto", "", new { @class = "form-control" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.Label("lblFuncao", "Função:", new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextArea("frmFuncao", htmlAttributes: new { @class = "form-control", @style = "width: 100%; max-width: 100%;" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("blbPass", "Sondas:", new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.ListBoxFor(model => model.SelectedOptions2, new MultiSelectList(Model.sondas, "Id", "Dns"), new { @class = "chosen-select", data_placeholder = "Especifica a sonda", style = "display: block;width: 100 %;height: 100%;padding: 6px 12px;font - size: 14px;line - height: 1.42857143;color: #555;background - color: #fff;background - image: none;border: 1px solid #ccc;border - radius: 4px;" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <p align="left">(*) Campos Obrigatórios</p>
        <input type="submit" value="Adicionar Cartão SIM" class="btn btn-danger" formaction="/home/AddCartaoSIM2/" />
        <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
    </div>

}
<script type="text/javascript">
    $(".chosen-select").chosen({ width: '90%' });
    var config = {
        '.chosen-select': {},
        '.chosen-select-deselect': { allow_single_deselect: true },
        '.chosen-select-no-single': { disable_search_threshold: 10 },
        '.chosen-select-no-results': { no_results_text: 'Oops, contacto não encontrado!' },
    }
    for (var selector in config) {
        $(selector).chosen(config[selector]);
    }

    $(document).ready(function () {
        $('#dataRegisto').datetimepicker({
            locale: 'pt'
        });
    });
    function callProgress() {
        $("#divLoading").show();
    };
</script>
