
@{
    ViewBag.Title = "Servidores Não Monitorados";
}

<script type="text/javascript">
    window.history.replaceState(null, "Title", "/Home/MonitorizacaoPRTG");
</script>

<h2>Listagem de Servidores no AD não Monitorados via PRTG</h2>
<html>

<body>
    <form method="POST">
        <table>
            <tr>
                <td>
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" name="Submit" value="Servidores dos Serv. Centrais"  formaction="/home/SearchSC/" class="btn btn-success btnScNaoMon" />
                </td>
            </tr>
            <tr>
                <td>
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" name="Submit" value="Servidores dos Balcões" formaction="/home/SearchBC/" class="btn btn-success btnblcNaoMon" />
                </td>
            </tr>
            <tr>
                <td colspan="10">
                    <div class="row" Style="margin-top: 1%;">
                        <div class="col-md-8">
                            <p id="hidenatt3" Style="color:#ff2c50" hidden>Ocorreu um erro durante o processamento da Informação. Por Favor, Contacte o Administrador da Página. </p>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </form>
    </br>
    @model PortalDSEMonitorizacao.Models.MonitorizacaoPRTGListViewModel

    <div class="scrollingTable">
        <table>
            @if (Model.servidoresBC != null)
            {

                <tr>
                    <td>
                        <b>Servidores dos Balcões não monitorados via PRTG</b>
                    </td>
                </tr>
                <tr>
                    <td>
                        <table class="table table-bordered table-hover" style="width: 100%">
                            <tr style="background-color:#D1005D">
                                <th class="text-center">Nome</th>
                                <th class="text-center">Descrição</th>
                                <th class="text-center">Directório no AD</th>
                            </tr>

                            @foreach (var dataItem in Model.servidoresBC)
                            {
                                <tr class="trcont">

                                    <td align="center">
                                        @dataItem.Name
                                    </td>
                                    <td align="center">
                                        @dataItem.Description
                                    </td>
                                     <td align="left" style="font-size:12px">
                                        @dataItem.Category
                                    </td>
                                </tr>
                            }
                        </table>
                    </td>
                </tr>
            }

            <tr>
                <td>
                    &nbsp;
                </td>
            </tr>

            @if (Model.servidoresSC != null)
            {
                <tr>
                    <td>
                        <b>Servidores dos Serviços Centrais não monitorados via PRTG</b>
                    </td>
                </tr>
                <tr>
                    <td>
                        <table class="table table-bordered table-hover" style="width: 100%">
                            <tr style="background-color:#D1005D">
                                <th class="text-center">Nome</th>
                                <th class="text-center">Descrição</th>
                                <th class="text-center">Directório no AD</th>
                            </tr>

                            @foreach (var dataItem in Model.servidoresSC)
                            {
                                <tr class="trcont">

                                    <td align="center">
                                        @dataItem.Name
                                    </td>
                                    <td align="center">
                                        @dataItem.Description
                                    </td>
                                     <td align="left" style="font-size:12px">
                                        @dataItem.Category
                                    </td>
                                </tr>
                            }
                        </table>
                    </td>
                </tr>
            }
            <tr>
                <td>
                    &nbsp;
                </td>
            </tr>
        </table>
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div id="teste"></div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px;
                    top: 0px; width: 100%; height: 100%; background-color: #666666; z-index: 30001;
                    opacity: .8; filter: alpha(opacity=70);display:none">
        <p style="position: absolute; top: 30%; left: 40%; right:50%; bottom:50%; color: White;">
            <img src="~/Content/img/msg-processando.gif">
        </p>
    </div>



    @Html.Raw(TempData["showmsg"])

</body>
</html>

