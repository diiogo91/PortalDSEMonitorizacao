@using System.Collections.Generic
@using System.Web.Mvc.Html
@using FormMethod = System.Web.Mvc.FormMethod
@{
    ViewBag.Title = "Editar Aplicacoes";
}

@model PortalDSEMonitorizacao.Models.EditCartaoSIMListViewModel


@using (Html.BeginForm("EditCartaoSIM2", "Home", FormMethod.Post))
{
 
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
        <p align="center">EDITAR DADOS DE: @Model.cartaoSIM.Numero</p>
    </div>

    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.HiddenFor(model => model.cartaoSIM.Id, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.HiddenFor(model => model.cartaoSIM.Id, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.cartaoSIM.Id)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.cartaoSIM.Numero, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.cartaoSIM.Numero, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.cartaoSIM.Numero)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.cartaoSIM.Operadora, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.cartaoSIM.Operadora, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.cartaoSIM.Operadora)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.cartaoSIM.DataRegisto, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    <div class='input-group date' id='datetimepicker2'>
                        @Html.TextBox("dataRegisto", Model.cartaoSIM.DataRegisto.ToString(string.Format("dd/MM/yyyy HH:mm")), new { @id = "dataRegisto", @class = "form-control" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.cartaoSIM.Funcao, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.cartaoSIM.Funcao, new { @class = "form-control", @style = "width: 100%; max-width: 100%;" })
                    @Html.ValidationMessageFor(model => model.cartaoSIM.Funcao)
                </div>
            </div>
            <div class="form-group">
                @Html.Label("lblName", "Sondas", new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.ListBoxFor(model => model.SelectedOptions2, new MultiSelectList(Model.sondas, "Id", "Dns"), new { @class = "chosen-select", data_placeholder = "Especifica a sonda", style = "display: block;width: 100 %;height: 100%;padding: 6px 12px;font - size: 14px;line - height: 1.42857143;color: #555;background - color: #fff;background - image: none;border: 1px solid #ccc;border - radius: 4px;" })
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <input type="submit" value="Confirmar" class="btn btn-danger" formaction="/home/EditCartaoSIM2/" />
        <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
    </div>

}
    <script type="text/javascript">
    $(".chosen-select").chosen({ width: '90%' });
    var config = {
        '.chosen-select': {},
        '.chosen-select-deselect': { allow_single_deselect: true },
        '.chosen-select-no-single': { disable_search_threshold: 10 },
        '.chosen-select-no-results': { no_results_text: 'Oops, contacto não encontrado!' },
    }
    for (var selector in config) {
        $(selector).chosen(config[selector]);
        }

        $(document).ready(function () {
            $('#dataRegisto').datetimepicker({
                locale: 'pt'
            });
        });
        function callProgress() {
            $("#divLoading").show();
        };
    </script>