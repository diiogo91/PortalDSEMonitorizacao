        <tr>
            <td><b> NB:</b> A Estatística é referente aos nº de Transações por tipo de Serviços Mobiles.</td>
        </tr>
    </table>
    @using (Html.BeginForm("EstatisticasTransacoes2", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

