            </tr>
        }
        <tr>
            <td>
                &nbsp;
            </td>
        </tr>


        <tr>
            <td>
                @if (Model.transacoesComsucesso != null)
                {
                <table>
                    <tr>
                        <td>
                            &nbsp;
                        </td>
                    </tr>
                    <tr>
                        <td><b> Transações com sucesso:</b> </td>
                    </tr>
                    <tr>
                        <td>
                            &nbsp;
                        </td>
                    </tr>
                </table>

                    <table class="table table-bordered table-hover" id="editable2" style="width: 100%">
                        <tr>
                            <th class="text-center">Nome Serviço</th>
