@using System
@using System.Activities.Expressions
@using System.IO

@{
    ViewBag.Title = "Gestão de Credenciais";

}
@Html.Raw(TempData["msg"])
<script type="text/javascript">
    //window.location.hash ="/Home/balcoes";
    window.history.replaceState(null, "Title", "/Home/GestaoCredenciais");
</script>

<h2 align="center">Gestão de Credenciais de Monitorização</h2>

<!DOCTYPE html>

<html>
<head>
    <title>Gestão de Credenciais </title>
</head>
@model PortalDSEMonitorizacao.Models.CredenciaisListViewModel
<body onload="maketableScroll2();">
    @using (Html.BeginForm("FiltrarCredencial", "Home", FormMethod.Post))
    {
        <table>
            <tr>
                <td colspan="2">
                    @Html.Label("Filtrar por User ", new { @class = "control-label" })
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.TextBox("filtroNome", "", new { @id = "filtroNome", @class = "form-control" })
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    <input type="submit" id="filtrar" class="btn btn-success"
                           value="Filtrar" formaction="/home/FiltrarCredencial" />
                </td>
            </tr>
        </table>
    }
    <form method="POST">
        <div class="scrollingTable">
            <br /><br />
            <table class="table table-bordered table-hover" id="editable" style="width: 100%">

                <tr style="background-color:#D1005D">
                    <th class="text-center">Acção</th>
                    <th class="text-center">User</th>
                    <th class="text-center">Password</th>
                    <th class="text-center">Data de Actualização</th>
                    <th class="text-center">Descrição</th>
                </tr>

                @if (Model.Credenciais != null)
                {

                    foreach (var dataItem in Model.Credenciais)
                    {
                        <tr class="trcont">
                            <td id=@dataItem.Id align="center">
                                @if (Model.temPermissao == true)
                                {
                                <a href="#" class="btn btn-link btnEditar" data-value="@dataItem.Id">Editar</a>
                                <a> | </a>
                                <input type="submit" id="remover_@dataItem.Id" class="btn btn-link"
                                       value="Remover" formaction="/home/RemoveCredencial/@dataItem.Id" data-value="@dataItem.Id" />
                                }
                                @if (Model.temPermissao == false)
                                {
                                <a href="#" class="btn btn-link btnEditar not-active" data-value="@dataItem.Id">Editar</a> 
                                <a> | </a>
                                <input type="submit" id="remover_@dataItem.Id" class="btn btn-link not-active" value="Remover" formaction="/home/RemoveCredencial/@dataItem.Id" data-value="@dataItem.Id" />
                                }
                            </td>
                            <td align="center">
                                @dataItem.User
                            </td>
                            <td align="center">
                                @{
                                    var passwordCodifyied = "**********";
                                    if (Model.temPermissao == true)
                                    {
                                        @dataItem.Password
                                    }
                                    if (Model.temPermissao == false)
                                    {
                                        if(dataItem.Visibilidade == true)
                                        {
                                            @dataItem.Password
                                        }
                                        if (dataItem.Visibilidade == false)
                                        {
                                             @passwordCodifyied
                                        }                                       
                                    }
                                }
                            </td>
                            <td align="center">
                                @dataItem.DataActualizacao.ToString(string.Format("dd/MM/yyyy HH:mm"))
                            </td>
                            <td align="center">
                                @dataItem.Descricao
                            </td>
                        </tr>
                    }
                }
            </table>
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div id="teste"></div>
                        </div>
                    </div>
                </div>
            </div>
            @section Scripts{
                <script type="text/javascript">
                    $(document).ready(function () {
                        $.ajaxSetup({ cache: false });
                        $(".btnEditar").click(function () {
                            var id = $(this).data("value");
                            $("#teste").load("/Home/EditCredencial/" + id,
                                function () {
                                    $('#myModal').modal("show");
                                });
                        });
                        $(".btnAddCredencial").click(function () {
                            var id = $(this).data("value");
                            $("#teste").load("/Home/AddCredencial/",
                                function () {
                                    $('#myModal').modal("show");
                                });
                        });
                    });
                </script>
            }
        </div>
        <div class="row" Style="margin-top: 1%;">
            <div class="col-md-8">
                <p id="hidenatt" Style="color:#ff2c50">Alterações Gravadas com Sucesso...</p>
            </div>
        </div>
        <div class="row" Style="margin-top: 1%;">
            <div class="col-md-8">
                <p id="hidenatt2" Style="color:#ff2c50" hidden></p>
            </div>
        </div>
        <script type="text/javascript">
            document.getElementById("hidenatt").style.display = "none";
        </script>
        <div class="row" Style="margin-top: 0.2cm;">
            <div class="col-md-1">
                 @if (Model.temPermissao == true)
                 {
                     <a href="#" class="btn btn-danger btnAddCredencial">Adicionar Nova Credencial</a>
                 }
                 @if (Model.temPermissao == false)
                 {
                     <a href="#" class="btn btn-danger" disabled>Adicionar Nova Credencial</a>
                 }
            </div>
            <div class="col-md-1">
            </div>
        </div>
        @Html.Raw(TempData["showmsg"])
    </form>

</body>

</html>