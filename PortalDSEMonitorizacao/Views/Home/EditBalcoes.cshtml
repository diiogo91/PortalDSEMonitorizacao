@using System.Collections.Generic
@using System.Web.Mvc.Html
@using FormMethod = System.Web.Mvc.FormMethod
@{
    ViewBag.Title = "Editar Contacto Balcões";
}

@model PortalDSEMonitorizacao.Models.ContactBalcao
@using (Html.BeginForm("EditBalcoes2", "Home", FormMethod.Get))
{
 
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
        <p align="center">EDITAR DADOS DE: @Model.Nome</p>
    </div>

    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.HiddenFor(model => model.Id, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.HiddenFor(model => model.Id, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Id)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Nome)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Equipa, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Equipa, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Equipa)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Telefone, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Telefone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Telefone)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Notf_Email, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @{
                        List<SelectListItem> listItems = new List<SelectListItem>();
                        if (Model.Notf_Email == "SIM")
                        {
                            listItems.Add(new SelectListItem
                            {
                                Text = "Sim",
                                Value = "Sim",
                                Selected = true
                            });
                            listItems.Add(new SelectListItem
                            {
                                Text = "Nao",
                                Value = "Nao"
                            });
                        }
                        else
                        {
                            listItems.Add(new SelectListItem
                            {
                                Text = "Sim",
                                Value = "Sim"
                            });
                            listItems.Add(new SelectListItem
                            {
                                Text = "Nao",
                                Value = "Nao",
                                Selected = true
                            });
                        }
                    }
                    @Html.DropDownListFor(model => model.Notf_Email, listItems, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Notf_Email)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Notf_SMS, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @{
                        List<SelectListItem> listItems2 = new List<SelectListItem>();
                        if (Model.Notf_SMS == "SIM")
                        {
                            listItems2.Add(new SelectListItem
                            {
                                Text = "Sim",
                                Value = "Sim",
                                Selected = true
                            });
                            listItems2.Add(new SelectListItem
                            {
                                Text = "Nao",
                                Value = "Nao"
                            });
                        }
                        else
                        {
                            listItems2.Add(new SelectListItem
                            {
                                Text = "Sim",
                                Value = "Sim"
                            });
                            listItems2.Add(new SelectListItem
                            {
                                Text = "Nao",
                                Value = "Nao",
                                Selected = true
                            });
                        }

                    }
                    @Html.DropDownListFor(model => model.Notf_SMS, listItems2, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Notf_SMS)
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <input type="submit" value="Confirmar" class="btn btn-danger" formaction="/home/EditBalcoes2/@Model.Id" />
        <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
    </div>

}