@using System
@using System.Activities.Expressions
@using System.IO

@{
    ViewBag.Title = "Gestão de Contactos Balcões";

}
@Html.Raw(TempData["msg"])
<script type="text/javascript">
    //window.location.hash ="/Home/balcoes";
    window.history.replaceState(null, "Title", "/Home/balcoes");
</script>

<h2 align="center">Gestão de Contactos: Comunicações com os Balcões</h2>

<!DOCTYPE html>

<html>
<head>
    <title>Gestão de Contactos - Comunicações com os Balcões</title>
</head>
<body onload="maketableScroll2();">

    @using (Html.BeginForm("FiltrarContactBalcoes", "Home", FormMethod.Post))
    {
        <table>
            <tr>
                <td colspan="2">
                    @Html.Label("Filtrar por Nome ", new { @class = "control-label" })
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    @Html.TextBox("filtroNome", "", new { @id = "filtroNome", @class = "form-control" })
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    <input type="submit" id="filtrar" class="btn btn-success"
                           value="Filtrar" formaction="/home/FiltrarContactBalcoes" />
                </td>
            </tr>
        </table>
    }

    <form method="POST">
        <div class="scrollingTable">


            <br /><br />
            <table class="table table-bordered table-hover" id="editable" style="width: 100%">

                <tr style="background-color:#D1005D">
                    <th class="text-center">Acção</th>
                    <th class="text-center">Nome</th>
                    <th class="text-center">Zona</th>
                    <th class="text-center">Telefone</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Notf_Email</th>
                    <th class="text-center">Notf_SMS</th>
                </tr>

                @model PortalDSEMonitorizacao.Models.ContactsBalcaoListViewModel

                @if (Model.Contactbalcao != null)
                {
                    foreach (var dataItem in Model.Contactbalcao)
                    {
                        <tr class="trcont">
                            <td id=@dataItem.Id align="center">
                                <a href="#" class="btn btn-link btnEditar" data-value="@dataItem.Id">Editar</a> |
                                <input type="submit" id="remover_@dataItem.Id" class="btn btn-link"
                                       value="Remover" formaction="/home/Remove/@dataItem.Id" data-value="@dataItem.Id" />
                            </td>
                            <td align="center">
                                @dataItem.Contacto.Nome
                            </td>
                            <td align="center">
                                @if(dataItem.Zona == "sc")
                                {
                                    var desc = "Serviços Centrais";
                                    @desc
                                }
                                @if(dataItem.Zona == "norte")
                                {
                                    var desc = "Dir. Comercial Norte";
                                    @desc
                                }
                                @if(dataItem.Zona == "centro")
                                {
                                    var desc = "Dir. Comercial Centro";
                                    @desc
                                }
                                @if(dataItem.Zona == "sul")
                                {
                                    var desc = "Dir. Comercial Sul";
                                    @desc
                                }
                                
                            </td>
                            <td align="center">
                                @dataItem.Contacto.Telefone
                            </td>
                            <td align="center">
                                @dataItem.Contacto.Email
                            </td>
                            <td align="center">
                                @dataItem.Notf_Email
                            </td>
                            <td align="center">
                                @dataItem.Notf_SMS
                            </td>
                        </tr>
                    }
                }
            </table>

            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div id="teste"></div>
                        </div>
                    </div>
                </div>
            </div>

            @section Scripts{

                <script type="text/javascript">
                    $(document).ready(function () {
                        $.ajaxSetup({ cache: false });
                        $(".btnEditar").click(function () {
                            var id = $(this).data("value");
                            $("#teste").load("/Home/EditBalcoes/" + id,
                                function () {
                                    $('#myModal').modal("show");
                                });
                        });
                        $(".btnAddContacto").click(function () {
                            var id = $(this).data("value");
                            $("#teste").load("/Home/AddContactoBalcoes/",
                                function () {
                                    $('#myModal').modal("show");
                                });
                        });
                    });
                </script>
            }
        </div>
        <div class="row" Style="margin-top: 1%;">
            <div class="col-md-8">
                <p id="hidenatt" Style="color:#ff2c50">Alterações Gravadas com Sucesso...</p>
            </div>
        </div>
        <div class="row" Style="margin-top: 1%;">
            <div class="col-md-8">
                <p id="hidenatt2" Style="color:#ff2c50" hidden></p>
            </div>
        </div>
        <script type="text/javascript">
            document.getElementById("hidenatt").style.display = "none";
        </script>
        <div class="row" Style="margin-top: 0.2cm;">
            <div class="col-md-1">
                <a href="#" class="btn btn-danger btnAddContacto">Associar Novo Contacto</a>
            </div>
            <div class="col-md-1">
            </div>
        </div>
        @Html.Raw(TempData["showmsg"])
    </form>

</body>

</html>