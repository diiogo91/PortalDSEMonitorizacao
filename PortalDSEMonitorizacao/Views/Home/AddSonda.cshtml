@using System.Collections.Generic
@using System.Web.Mvc.Html
@using FormMethod = System.Web.Mvc.FormMethod
@{
    /**/

    ViewBag.Title = "Add Sonda";
}
<head>
    <title>Registo de Indisponibilidade de Serviços Mobile</title>

</head>

@model PortalDSEMonitorizacao.Models.AddSondaListViewModel


@using (Html.BeginForm("AddSonda2", "Home", FormMethod.Post))
{

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
        <p align="center">Criar Nova Sonda</p>
    </div>

    <div class="modal-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.Label("lblName", "(*) DNS:", new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBox("frmDns", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("lblName", "IP:", new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBox("frmIP", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("lblC", "Credenciais:", new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.ListBoxFor(model => model.SelectedOptions, new MultiSelectList(Model.credenciais, "Id", "User"), new { @class = "chosen-select", data_placeholder = "Especifica a credencial", style = "display: block;width: 100 %;height: 100%;padding: 6px 12px;font - size: 14px;line - height: 1.42857143;color: #555;background - color: #fff;background - image: none;border: 1px solid #ccc;border - radius: 4px;" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("lblName", "Sistema Operativo:", new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBox("frmSistemaOp", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("lblName", "Descrição:", new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                   @Html.TextArea("frmDescricao", htmlAttributes: new { @class = "form-control", @style = "width: 100%; max-width: 100%;" })
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px;
    top: 0px; width: 100%; height: 100%; background-color: #666666; z-index: 30001;
    opacity: .8; filter: alpha(opacity=70);display:none">
        <p style="position: absolute; top: 30%; left: 40%; right:50%; bottom:50%; color: White;">
            <img src="~/Content/img/msg-processando.gif">
        </p>
    </div>

    <div class="modal-footer">
        <input type="submit" name="Submit" value="Adicionar" class="btn btn-success" onclick="callProgress()" formaction="/home/AddSonda2" />
        <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
    </div>
}

<script type="text/javascript">
    $(".chosen-select").chosen({ width: '90%' });
    var config = {
        '.chosen-select': {},
        '.chosen-select-deselect': { allow_single_deselect: true },
        '.chosen-select-no-single': { disable_search_threshold: 10 },
        '.chosen-select-no-results': { no_results_text: 'Oops, contacto não encontrado!' },
    }
    for (var selector in config) {
        $(selector).chosen(config[selector]);
    }
</script>

