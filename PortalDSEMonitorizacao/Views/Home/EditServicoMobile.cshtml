@using System.Collections.Generic
@using System.Web.Mvc.Html
@using FormMethod = System.Web.Mvc.FormMethod
@{
    ViewBag.Title = "Editar Contacto Balcões";
}
<head>
    <title>Registo de Indisponibilidade de Serviços Mobile</title>
    <link rel="stylesheet" href="~/Content/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/Content/jquery-ui.structure.min.css" />
    <link rel="stylesheet" href="~/Content/jquery-ui.theme.min.css" />
    <link rel="stylesheet" href="/Content/bootstrap-datetimepicker.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-datetimepicker.min.css" />
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/moment-with-locales.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
</head>

@model PortalDSEMonitorizacao.Models.ServicoMobile

@using (Html.BeginForm("EditServicoMobile2", "Home", FormMethod.Post))
{

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
        <p align="center">Editar Serviço Mobile : @Model.Nome</p>
    </div>

    <div class="modal-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.Label("lblName", "(*) Nome:", new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Nome, "", new { @id ="frmNome", @class = "form-control" })
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px;
    top: 0px; width: 100%; height: 100%; background-color: #666666; z-index: 30001;
    opacity: .8; filter: alpha(opacity=70);display:none">
        <p style="position: absolute; top: 30%; left: 40%; right:50%; bottom:50%; color: White;">
            <img src="~/Content/img/msg-processando.gif">
        </p>
    </div>
    <div class="modal-footer">
        <p align="left">(*) Campos Obrigatórios</p>
        <input type="submit" name="Submit" value="Submeter" class="btn btn-success" onclick="callProgress()" formaction="/home/EditServicoMobile2/@Model.Id" />
        <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
    </div>
}
@Html.Raw(TempData["showmsg"])
<script type="text/javascript">
    function callProgress() {
        $("#divLoading").show();
    };
</script>