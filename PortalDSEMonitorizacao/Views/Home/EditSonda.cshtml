@using System.Collections.Generic
@using System.Web.Mvc.Html
@using FormMethod = System.Web.Mvc.FormMethod
@{
    ViewBag.Title = "Editar Sonda";
}

@model PortalDSEMonitorizacao.Models.EditSondaListViewModel

@using (Html.BeginForm("EditSonda2", "Home", FormMethod.Post))
{
 
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
        <p align="center">EDITAR DADOS DE: @Model.Sonda.Dns</p>
    </div>

    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.HiddenFor(model => model.Sonda.Id, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.HiddenFor(model => model.Sonda.Id, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Sonda.Id)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Sonda.Dns, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Sonda.Dns, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Sonda.Dns)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Sonda.Ip, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Sonda.Ip, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Sonda.Ip)
                </div>
            </div>
            <div class="form-group">
                @Html.Label("lblName", "Credenciais:", new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.ListBoxFor(model => model.SelectedOptions, new MultiSelectList(Model.credenciais, "Id", "User"), new { @class = "chosen-select", data_placeholder = "Escolha o(s) contacto(s)", style = "display: block;width: 100 %;height: 100%;padding: 6px 12px;font - size: 14px;line - height: 1.42857143;color: #555;background - color: #fff;background - image: none;border: 1px solid #ccc;border - radius: 4px;" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Sonda.SistemaOperativo, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Sonda.SistemaOperativo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Sonda.SistemaOperativo)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Sonda.Descricao, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.Sonda.Descricao, new { @class = "form-control", @style = "width: 100%; max-width: 100%;" })
                    @Html.ValidationMessageFor(model => model.Sonda.Descricao)
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <p align="left">(*) Campos Obrigatórios</p>
        <input type="submit" value="Confirmar" class="btn btn-danger" formaction="/home/EditSonda2/@Model.Sonda.Id" />
        <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
    </div>

}
<script type="text/javascript">
    $(".chosen-select").chosen({ width: '90%' });
    var config = {
        '.chosen-select': {},
        '.chosen-select-deselect': { allow_single_deselect: true },
        '.chosen-select-no-single': { disable_search_threshold: 10 },
        '.chosen-select-no-results': { no_results_text: 'Oops, contacto não encontrado!' },
    }
    for (var selector in config) {
        $(selector).chosen(config[selector]);
    }
</script>